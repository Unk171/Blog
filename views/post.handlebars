<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <div class="comments">
    <h3>Comments:</h3>
    <ul>
      {{#each comments as |comment|}}
          <li>
          <p>{{comment.commentText}}</p>
          <p>{{comment.user.name}} {{format_date comment.date_created}} </p>
        </li>
      {{/each}}
    </ul>
  </div>

  <h3>New Comment:</h3>
  <form class="form comment-form">
    <div class="form-group">
      <label for="post-descr">Text:</label>
      <textarea
        class="form-input"
        id="commentContent"
        name="commentContent"
      ></textarea>
    </div>
    <div class="form-group">
      <button
        type="submit" id="comment-btn" data-id="{{post.id}}" class="btn btn-primary">Comment</button>
    </div>
  </form>
</div>
<script src="/js/comment.js" ></script>